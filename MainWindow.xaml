<Window x:Class="Game2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048"
        mc:Ignorable="d"
        Title="2048" Height="900" Width="800"
        Background="PeachPuff"
        xmlns:controls="clr-namespace:Game2048.Controls" 
        KeyDown="Window_KeyDown" Closed="Window_Closed" Activated="Window_Activated">
    <Window.Resources>
        <local:Field x:Key="Matrix"/>

        <Style TargetType="Border" x:Key="BackgroundStyle">
            <Setter Property="Background" Value="#FF9A8263"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="FontFamily" Value="CalibriBold"/>
                    <Setter Property="Foreground" Value="Moccasin"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height= "4*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Scores"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border x:Name="Score"
                    Grid.Column="0"
                    Style="{StaticResource BackgroundStyle}"
                    DataContext="{StaticResource Matrix}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <TextBlock Text ="Score:"/>
                    <TextBlock x:Name="ScoreCount" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border x:Name="HightScore"
                    Grid.Column="1"
                    Style="{StaticResource BackgroundStyle}">
                <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <TextBlock Text ="Hight Score:"/>
                    <TextBlock x:Name="HightScoreCount" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border
                Grid.Row="1"
                Style="{StaticResource BackgroundStyle}">
            <Grid x:Name="Map" DataContext="{StaticResource Matrix}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <controls:ColoredTile 
                    x:Name ="oo"
                    Grid.Column="0"
                    Grid.Row="0"/>
                <controls:ColoredTile 
                    x:Name ="o1"
                    Grid.Column="1"
                    Grid.Row="0"/>
                <controls:ColoredTile 
                    x:Name ="o2"
                    Grid.Column="2"
                    Grid.Row="0"/>
                <controls:ColoredTile 
                    x:Name ="o3"
                    Grid.Column="3"
                    Grid.Row="0"/>
                <controls:ColoredTile 
                    x:Name ="I0"
                    Grid.Column="0"
                    Grid.Row="1"/>
                <controls:ColoredTile 
                    x:Name ="I1"
                    Grid.Column="1"
                    Grid.Row="1"/>
                <controls:ColoredTile 
                    x:Name ="I2"
                    Grid.Column="2"
                    Grid.Row="1"/>
                <controls:ColoredTile 
                    x:Name ="I3"
                    Grid.Column="3"
                    Grid.Row="1"/>
                <controls:ColoredTile 
                    x:Name ="II0"
                    Grid.Column="0"
                    Grid.Row="2"/>
                <controls:ColoredTile 
                    x:Name ="II1"
                    Grid.Column="1"
                    Grid.Row="2"/>
                <controls:ColoredTile 
                    x:Name ="II2"
                    Grid.Column="2"
                    Grid.Row="2"/>
                <controls:ColoredTile 
                    x:Name ="II3"
                    Grid.Column="3"
                    Grid.Row="2"/>
                <controls:ColoredTile 
                    x:Name ="III0"
                    Grid.Column="0"
                    Grid.Row="3"/>
                <controls:ColoredTile 
                    x:Name ="III1"
                    Grid.Column="1"
                    Grid.Row="3"/>
                <controls:ColoredTile 
                    x:Name ="III2"
                    Grid.Column="2"
                    Grid.Row="3"/>
                <controls:ColoredTile 
                    x:Name ="III3"
                    Grid.Column="3"
                    Grid.Row="3"/>


            </Grid>
        </Border>
    </Grid>
</Window>
