<Window x:Class="Game2048.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048"
        mc:Ignorable="d"
        Title="Registration" Height="200" Width="400"
        Background="Black"
        Top="400" Left="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name ="Username" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Foreground="White"
                       Text="Username: "
                       Grid.Column="0"
                       FontSize="15"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <Border Grid.Column="1">
                <TextBox x:Name="UsernameTextBox" 
                         Background="Black"
                         Foreground="White"
                         FontFamily="Calibri"
                         FontSize="30"
                         VerticalAlignment="Center"
                         Text="{Binding Username, Mode=TwoWay}"/>
            </Border>
        </Grid>

        <Grid x:Name ="Password" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Foreground="White"
               Text="Password: "
               Grid.Column="0"
               FontSize="15"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

            <Border Grid.Column="1"
                Background="White">
                <TextBox x:Name="PasswordTextBox" 
                         Background="Black"
                         Foreground="White"
                         FontFamily="Calibri"
                         FontSize="30"
                         Text="{Binding Password, Mode=TwoWay}"/>
            </Border>
        </Grid>

        <Grid x:Name="Remember" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="1">
                <CheckBox x:Name="RememberMeCheckBox"
                          Canvas.Top="15"
                          Command="{Binding RememberMeCommand}"/>
                <TextBlock Foreground="White"
                           Canvas.Top="15"
                           Canvas.Left="20"
                           Text="Remember Me"
                           FontFamily="Calibri"/>
            </Canvas>
        </Grid>

        <Grid x:Name="LogIn" Grid.Row="3" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="1"
                    Grid.Row="1"
                    Background="Green"
                    Command ="{Binding LogInCommand}">
                <TextBlock Text="Log In"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontFamily="Calibri"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Button>

            <Button Grid.Column="2"
                    Grid.Row="1"
                    Background="Red">
                <TextBlock Text="Cancel"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Calibri"
                       FontWeight="Bold"
                       Foreground="White"/>
            </Button>    
            
        </Grid>
    </Grid>
</Window>
